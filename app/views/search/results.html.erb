<h1>Search results</h1>
<% if @results[:friends].any? %>
<h1>Friends</h1>
  <% @results[:friends].each do |friend| %>
  <h3><%= link_to "#{friend.first_name} #{friend.last_name}", user_path(friend) %></h3>
  <% end %>
<% end %>

<% if @results[:users].any? %>
<h1>Users</h1>
  <% @results[:users].each do |user| %>
  <h3><%= link_to "#{user.first_name} #{user.last_name}", user_path(user) %></h3>
  <% end %>
<% end %>

<% if @results[:groups].any? %>
<h1>Groups</h1>
  <% @results[:groups].each do |group| %>
  <h3><%= link_to group.name, user_group_path(@current_user, group) %></h3>
  <% end %>
<% end %>

<% if @results.values.all? {|group| group == []} %>
  <h3>No results found</h3>
<% end %>
